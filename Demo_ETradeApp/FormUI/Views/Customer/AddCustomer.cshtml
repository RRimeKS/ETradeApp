@model EntiLayer.Concrete.Customer
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1>Müşteri Ekle</h1>

<form method="post">
    @Html.Label("Müşteri Adı")
    @Html.TextBoxFor(x=>x.CustomerFirstName, new{@class="form-control"})
    @Html.ValidationMessageFor(x=>x.CustomerFirstName);
    <br />
    @Html.Label("Müşteri Soyadı")
    @Html.TextBoxFor(x=>x.CustomerLastName, new{@class="form-control"})
    @Html.ValidationMessageFor(x=>x.CustomerLastName);
    <br />
    @Html.Label("Müşteri Şehri")
    @Html.TextBoxFor(x=>x.CustomerCity, new{@class="form-control"})
    @Html.ValidationMessageFor(x=>x.CustomerCity);
    <br />
    <button class="btn btn-success">MÜŞTERİ EKLE</button>
</form>
