@using EntiLayer.Concrete;
@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1>Ürünler</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ürün Adı</th>
        <th>Ürün Fiyatı</th>
        <th>Ürün Stoğu</th>
        <th>ürün Sil</th>
        <th>Ürün Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductId</td>
            <td>@item.ProductName</td>
            <td>@item.ProductPrice</td>
            <td>@item.ProductStock</td>
            <td><a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-danger">SİL</a></td>
            <td><a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-success">GÜNCELLE</a></td>
        </tr>
    }
</table>
<a href="/Product/AddProduct" class="btn btn-primary">Ürün Ekle</a>

