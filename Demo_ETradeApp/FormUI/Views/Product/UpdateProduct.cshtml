@model EntiLayer.Concrete.Product
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}
<br />
<h1>Ürün Güncelle</h1>
<form method="post">
    @Html.HiddenFor(x=>x.ProductId)
    @Html.Label("Ürün Adı")
    @Html.TextBoxFor(x=>x.ProductName, new{@class="form-control"})
    <br />
    @Html.Label("Ürün Fiyatı")
    @Html.TextBoxFor(x=>x.ProductPrice, new{@class="form-control"})
    <br />
    @Html.Label("Ürün Stoğu")
    @Html.TextBoxFor(x=>x.ProductStock, new{@class="form-control"})
    <br />
    <button class="btn btn-primary">ÜRÜN GÜNCELLE</button>
</form>
